<launch>

  <!-- Definition of source location is Shelf or Tote in ARC. -->

  <arg name="pick" default="true" doc="Flag if pick or stow task." />

  <node name="interactive_adjust_shelf"
        pkg="jsk_interactive_marker" type="marker_6dof">
    <rosparam if="$(arg pick)" command="load" file="$(find jsk_arc2017_common)/config/pick_task/shelf_marker.yaml"/>
    <rosparam unless="$(arg pick)" command="load" file="$(find jsk_arc2017_common)/config/stow_task/shelf_marker.yaml"/>
  </node>

  <group if="$(arg pick)">
    <node name="publish_bin_boxes"
          pkg="jsk_recognition_utils" type="bounding_box_array_publisher.py">
      <rosparam file="$(find jsk_arc2017_common)/config/shelf_bin.yaml" command="load" />
    </node>
  </group>

</launch>
